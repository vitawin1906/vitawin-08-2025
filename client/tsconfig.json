{
  "include": ["client", "shared", "server"], // üëà –¥–æ–±–∞–≤–∏–ª–∏ –≤–µ—Å—å client
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@assets/*": ["attached_assets/*"]
    },
    "types": ["vite/client", "node"]
  }
}
